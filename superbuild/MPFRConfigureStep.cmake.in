execute_process(
  COMMAND
    sh @MPFR_SOURCE_DIR@/configure
    --prefix @MPFR_INSTALL_DIR@
    --with-gmp-include=@GMP_INCLUDE_DIR@
    --with-gmp-lib=@GMP_LIBRARY_DIR@
  WORKING_DIRECTORY @MPFR_BINARY_DIR@
  RESULT_VARIABLE rv)

if(NOT rv EQUAL 0)
  message(FATAL_ERROR "Failed to configure MPFR.")
endif()
